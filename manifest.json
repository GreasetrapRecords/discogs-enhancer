{
  "manifest_version": 2,

  "name": "Discogs Enhancer",
  "short_name": "Discogs Enhancer",
  "description": "Adds a dark theme, marketplace highlights, configurable quick search, total playtimes, sort buttons and more to Discogs and Chrome!",
  "version": "1.6.2",
  "author": "Matthew Salcido",
  "homepage_url": "http://www.msalcido.com/discogs-enhancer",
  "browser_action": {
    "default_title": "Discogs Enhancer",
    "default_icon": "img/icon_128.png",
    "default_popup": "html/popup.html"
  },

  "content_scripts": [
      {
       "matches": ["*://*.discogs.com/*"],
       "js": ["js/jquery/jquery-min.js", "js/background.js"],
       "run_at" : "document_start"
      }
  ],

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "background": {
     "scripts": [
        "js/search-contextual-menu.js",
        "js/background.js",
        "js/apply-highlights.js"
      ]
   },

  "permissions": [
    "*://*.discogs.com/*",
    "storage",
    "contextMenus",
    "tabs",
    "notifications"
    ],

    "web_accessible_resources": [
      "css/dark-theme.css",
      "css/marketplace-highlights.css",
      "css/pre-loader.css",
      "html/about.html",
      "js/apply-highlights.js",
      "js/better-collection-ui.js",
      "js/chart/chart.js",
      "js/jquery/jquery-min.js",
      "js/release-durations.js",
      "js/release-history-legend.js",
      "js/resource-library.js",
      "js/sort-explore-lists.js",
      "js/sort-marketplace-lists.js",
      "js/sort-personal-lists.js",
      "js/suggested-prices-all.js",
      "js/suggested-prices-release-page.js",
      "js/suggested-prices-single.js",
      "js/update-exchange-rates.js"
    ],

    "icons": {
      "16": "img/icon_16.png",
      "32": "img/icon_32.png",
      "48": "img/icon_48.png",
      "128": "img/icon_128.png"
    }
}
